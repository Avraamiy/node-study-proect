<h1>Orders</h1>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="cart">
                    <div class="cart-content">
            <span class="cart-title">
                 <p>Order: <small>{{_id}}</small></p>
            </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.name}}</em>
                        <td>({{user.userId.email}})

                        <ol>
                            {{#each courses}}
                                <li>{{course.title}}x{{count}}</li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Total Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Not Orders Yet</p>
{{/if}}
